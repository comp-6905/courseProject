  //头文件,设定文件的显示格式以及搜索的CSS文件范围,有的属于demo,有的属于style.css
  head
    meta(charset='UTF-8')
    // <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    title M-CarShare
    link(rel='stylesheet', type='text/css', href='/stylesheets/demo.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/animate-custom.css')

  //页面主体,对应于html文件
  body
    .container
      // Codrops top bar
      .codrops-top
        a(href='')
          strong  Welcome to the M-CarShare system!
        span.right
          a(href=' ')
            a(href='/contact')
              strong About us
        .clr
      // / Codrops 标题

      header
        img(src='images/title.png', alt='brandtitle', width='739', height='125', align='centre')
        h1
          | Login and Registration
          span
        nav.codrops-demos
      section
        #container_demo
          a#toregister.hiddenanchor
          a#tologin.hiddenanchor
          #wrapper
            #login.animate.form
              form(action='/', autocomplete='on', method='POST')
                h1 Log in
                //下面是选择用户类型的列表
                p
                  label.ugroup(for='usergroup')  Choose Your User Type
                  select(name='group', style='margin-left:55px;width:180px;height:30px;border:1px solid rgb(178, 178, 178);;background-color:white;font-size:14px')
                    option(value='1') Membership Customer
                    option(value='2') Employee
                    option(value='3') Administrator
                    //option(value='4') Administrator
                br
                p
                  label.uname(for='username', data-icon='u')  Your User Name
                  input#username(name='username', required='required', type='text', placeholder='Membership or Employee Card')
                p
                  label.youpasswd(for='password', data-icon='p')  Your password
                  input#password(name='password', required='required', type='password', placeholder='Along with your Membership or contract')
                //选择框,用于是否保持logged in
                p.keeplogin
                  input#loginkeeping(type='checkbox', name='loginkeeping', value='loginkeeping')
                  label(for='loginkeeping') Keep me logged in
                p.login.button
                  input(type='submit', value='Login')
                //链接到注册页面
                p.change_link
                  | New customer to M-CarShare ?
                  a.to_register(href='#toregister') Join Now !
            #register.animate.form
              form(action='/register', autocomplete='on', method='POST')
                h1  Sign up
                p
                  label.ugroup(for='usergroupsignup') A few more steps to the Membership :)

                p#driverID(style='display:block;')
                  label#driverID(for='driverID', data-icon='u')  Your Driver License ID
                  input#driverID(name='driverID', type='text', placeholder='Must exactly the same as printed on your license')
                p
                  label.uname(for='username', data-icon='u') Your User Name
                  input#username(name='username', required='required', type='text', placeholder='mysuperusername690')
                p
                  label.youmail(for='emailsignup', data-icon='e')  Your Email
                  input#emailsignup(name='emailsignup', required='required', type='email', placeholder='mysupermail@mail.com')
                p
                  label.uname(for='firstName', data-icon='u') Your First Name
                  input#firstName(name='firstName', required='required', type='text', placeholder='Alan')
                p
                  label.uname(for='lastName', data-icon='u') Your Last Name
                  input#lastName(name='lastName', required='required', type='text', placeholder='Smith')
                p
                  label.youpasswd(for='password', data-icon='p') Your Password
                  input#password(name='password', required='required', type='password', placeholder='Better use combinations of numbers, characters and symbols')
                p
                  label.youpasswd(for='passwordsignup_confirm', data-icon='p') Please Confirm Your Password
                  input#passwordsignup_confirm(name='passwordsignup_confirm', required='required', type='password', placeholder='The same as above')
                p.signin.button
                  input(type='submit', value='Sign up',onclick='checkusergroup()')
                //- p#grouperr
                //-                 script.
                //-                   function checkusergroup() {
                //-                   document.getElementById("grouperr").innerHTML = "Please select your group";
                //-                   }

                p.change_link
                  | Already a member ?
                  a.to_register(href='#tologin')  Go and log in
