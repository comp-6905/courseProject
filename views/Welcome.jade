                //- .showOrhide
                p#dispStuID(style='display:block;')
                  label#stuID1.stuID(for='stuID', data-icon='u')  Your Driver License ID
                  input#stuID(name='stuID', type='text', placeholder='Must exactly the same as printed on your license')
                //- p#dispHostAdd(style='display:none;')
                //-   label#hostAdd1.hostAdd(for='hostAdd', data-icon='a')  Your Address
                //-   input#hostAdd(name='hostAdd', type='text', placeholder='1xx Elizabeth Ave')
                p
                  label.uname(for='usernamesignup', data-icon='u') Your User Name
                  input#usernamesignup(name='usernamesignup', required='required', type='text', placeholder='mysuperusername690')
                p
                  label.youmail(for='emailsignup', data-icon='e')  Your Email
                  input#emailsignup(name='emailsignup', required='required', type='email', placeholder='mysupermail@mail.com')
                p
                  label.youpasswd(for='passwordsignup', data-icon='p') Your Password
                  input#passwordsignup(name='passwordsignup', required='required', type='password', placeholder='Better use combinations of numbers, characters and symbols')
                p
