  // <![endif]
  //头文件,设定文件的显示格式以及搜索的CSS文件范围,有的属于demo,有的属于style.css
  head
    meta(charset='UTF-8')
    // <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    title M-CarShare
    link(rel='stylesheet', type='text/css', href='/stylesheets/demo.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/animate-custom.css')

  //页面主体,对应于html文件
  body
    .container
      // Codrops top bar
      .codrops-top
        a(href='')
          strong  Welcome to the M-CarShare system!
        span.right
          a(href=' ')
            a(href='/logout')
              strong Logout
        .clr
      // / Codrops 标题

      header
        img(src='images/title.png', alt='brandtitle', width='739', height='125', align='centre')
        h1
          | Car Listing
          span
        nav.codrops-demos
          
          
          table.table-fill
                      thead
                        tr 
                         
                           th.text-left CarID
                           th.text-left Brand
                           th.text-left Class
                           th.text-left Price
                           th.text-left Location
                           th.text-left License
                           th.text-left Color
                           th.text-left Customer
                           th.text-left
                      tbody
                          each car, i in cars
                              tr
                                  
                                  td #{car._id}
                                  td #{car.brand}
                                  td #{car.classType}
                                  td #{car.price}
                                  td #{car.parkLocation}
                                  td #{car.license}
                                  td #{car.color}
                                  td #{car.customer}
                                  td
                                    button(type='submit') Order Now!
